<div class="container mt-5 text-allign">
  <h1>Criar review</h1>
  <p>Escreva um review para o seu pedido</p>
</div>

<div class="container mt-5 flex-item-align-text">
  <%= simple_form_for [@order, @review] do |f| %>
  <%= f.error_notification %>
  <% f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors
  [:base].present? %>
  <div class="form-inputs">
    <%= f.input :content, :label => 'Escreva seu review' %>
    <%= f.input :rating, :label => 'Avalie de 1 a 5' %>
  </div>
  <div class="form-actions">
    <%= f.submit 'Criar', class: "btn btn-primary"%>
  </div>
<% end %>
  <br>
  <%= link_to 'Voltar', orders_path, class: "btn btn-success" %>
</div>
