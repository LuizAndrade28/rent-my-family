<div class="container mt-5 text-allign">
  <h1>Add a new review</h1>
</div>

<div class="container mt-5 flex-item-align-text">
  <%= simple_form_for [@order, @review] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors
  [:base].present? %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary"%>
  </div>
<% end %>

  <%= link_to 'Back', orders_path, class: "btn btn-success" %>
</div>
