<%= simple_form_for (@family_member) do |f| %>
  <div class="form-inputs scroll-form">
    <%= f.error_notification %>
    <% f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors
    [:base].present? %>

    <%= f.input :first_name, :label => 'Primeiro nome'%>
    <%= f.input :last_name, :label => 'Sobrenome' %>
    <%= f.input :kinship, :label => 'Parentesco' %>
    <%= f.input :description, :label => 'Descrição',
                              :placeholder => 'Uma breve descrição de seu familiar'%>
    <%= f.input :profile_title, :label => 'Título' %>
    <%= f.input :value_hour, :label => 'Valor por hora' %>
    <%= f.input :photo, as: :file, :label => 'Foto' %>
  </div>

  <div class="form-actions pt-4">
    <%= f.submit "Cadastrar", class: "btn btn-outline-warning shadow-sm"%>
  </div>
<% end %>
